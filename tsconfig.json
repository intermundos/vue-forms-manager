{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "bun"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "paths": {
      "vue-forms-manager": [
        "./src"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "**/*.md",
    "src/**/*.d.ts"
  ]
}
